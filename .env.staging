# ScienceRAG Staging Environment Configuration
# This file contains staging-specific settings

# Application
APP_NAME=ScienceRAG
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql+asyncpg://sciencerag:sciencerag@postgres:5432/sciencerag

# Redis
REDIS_URL=redis://redis:6379/0

# AI Services
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# External APIs
OPENALEX_EMAIL=${OPENALEX_EMAIL}
SEMANTIC_SCHOLAR_API_KEY=${SEMANTIC_SCHOLAR_API_KEY}

# CORS
CORS_ORIGINS=["https://staging.sciencerag.app","http://localhost:3000"]

# Security
SECRET_KEY=${SECRET_KEY}
JWT_SECRET_KEY=${JWT_SECRET_KEY}

# Performance
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_TO_FILE=true
LOG_TO_CONSOLE=false

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# External Services
SENTRY_DSN=${SENTRY_DSN}
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}