# ScienceRAG Development Environment Configuration
# This file contains development-specific settings

# Application
APP_NAME=ScienceRAG
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=DEBUG

# Database
DATABASE_URL=postgresql+asyncpg://sciencerag:sciencerag@postgres:5432/sciencerag

# Redis
REDIS_URL=redis://redis:6379/0

# AI Services
OPENAI_API_KEY=your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here

# External APIs
OPENALEX_EMAIL=your-email@example.com
SEMANTIC_SCHOLAR_API_KEY=

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://frontend:3000"]

# Development Features
ENABLE_SWAGGER=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_CORS=true

# Performance (relaxed for development)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Logging
LOG_TO_FILE=false
LOG_TO_CONSOLE=true

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true
ENABLE_PROFILING=false